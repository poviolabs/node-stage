{
  "name": "@poviolabs/node-stage",
  "version": "1.0.24",
  "packageManager": "yarn@3.2.1",
  "main": "./dist/index.js",
  "type": "commonjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./cli": {
      "default": "./dist/helpers/cli.helper.js",
      "types": "./dist/helpers/cli.helper.d.ts"
    },
    "./git": {
      "default": "./dist/helpers/git.helper.js",
      "types": "./dist/helpers/git.helper.d.ts"
    },
    "./yargs": {
      "default": "./dist/helpers/yargs.helper.js",
      "types": "./dist/helpers/yargs.helper.d.ts"
    },
    "./version": {
      "default": "./dist/helpers/version.helper.js",
      "types": "./dist/helpers/version.helper.d.ts"
    },
    "./config": {
      "default": "./dist/helpers/config.helper.js",
      "types": "./dist/helpers/config.helper.d.ts"
    }
  },
  "types": "./dist/index.d.ts",
  "bin": "./dist/sh.js",
  "scripts": {
    "build": "yarn clean && yarn version patch && yarn run build:cjs",
    "build:cjs": "node tools/cleanup cjs && tsc -p ./tsconfig.json && chmod +x ./dist/sh.js",
    "clean": "node tools/cleanup",
    "test": "jest --no-cache --runInBand",
    "test:cov": "jest --coverage --no-cache --runInBand",
    "test:cli": "./dist/sh.js --pwd ./test --stage test",
    "test:ts-node:cli": "ts-node -r tsconfig-paths/register ./src/sh.ts --pwd ./test --stage test",
    "lint": "eslint ."
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "povio",
    "node",
    "config",
    "yaml",
    "yargs"
  ],
  "homepage": "https://github.com/poviolabs/node-stage",
  "bugs": "https://github.com/poviolabs/node-stage/issues",
  "repository": {
    "url": "https://github.com/poviolabs/node-stage",
    "type": "git"
  },
  "contributors": [
    "Marko Zabreznik <marko.zabreznik@povio.com>"
  ],
  "dependencies": {
    "chalk": "^4.1.2",
    "dotenv": "^16.0.1",
    "prompt-sync": "^4.2.0",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.3.7",
    "simple-git": "^3.9.0",
    "yaml": "^2.1.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@jest/types": "^28.1.1",
    "@swc/core": "^1.2.204",
    "@swc/jest": "^0.2.21",
    "@types/eslint": "^8.4.3",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/prettier": "^2.6.3",
    "@types/prompt-sync": "^4.1.1",
    "@types/semver": "^7.3.10",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": ">= 16.15.1",
    "yarn": ">= 3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  }
}
