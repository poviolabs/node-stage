{
  "name": "@poviolabs/node-stage",
  "version": "1.0.0",
  "packageManager": "yarn@3.2.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "build": "yarn version patch && yarn run build:cjs && yarn run build:esm && yarn run build:types && yarn run build:cli",
    "build:cjs": "node tools/cleanup cjs && tsc -p ./tsconfig.cjs.json",
    "build:types": "node tools/cleanup types && tsc -p ./tsconfig.types.json",
    "build:cli": "yarn ncc build ./src/index.ts -m --no-source-map-register --stats-out ./dist/stats.json && chmod +x ./dist/index.js",
    "clean": "node tools/cleanup",
    "test": "jest --no-cache --runInBand",
    "test:cov": "jest --coverage --no-cache --runInBand",
    "test:slack": "ts-node -r tsconfig-paths/register ./src/cli/index.ts --pwd ./test --stage test slack",
    "lint": "eslint ."
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "povio",
    "node",
    "config",
    "yaml",
    "yargs"
  ],
  "homepage": "https://github.com/poviolabs/node-stage",
  "bugs": "https://github.com/poviolabs/node-stage/issues",
  "repository": {
    "url": "https://github.com/poviolabs/node-stage",
    "type": "git"
  },
  "contributors": [
    "Marko Zabreznik <marko.zabreznik@povio.com>"
  ],
  "dependencies": {
    "@types/prompt-sync": "^4.1.1",
    "dotenv": "^16.0.0",
    "prompt-sync": "^4.2.0",
    "yaml": "^2.0.0"
  },
  "devDependencies": {
    "@jest/types": "^27.5.1",
    "@slack/web-api": "^6.7.1",
    "@swc/core": "^1.2.165",
    "@swc/jest": "^0.2.20",
    "@types/diff": "^5.0.2",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^16.11.26",
    "@types/prettier": "^2.6.0",
    "@types/semver": "^7.3.9",
    "@types/yargs": "^17.0.10",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "@vercel/ncc": "^0.33.4",
    "chalk": "^4.1.2",
    "diff": "^5.0.0",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "semver": "^7.3.7",
    "simple-git": "^3.6.0",
    "source-map-support": "^0.5.21",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "4.6.3",
    "yargs": "^17.4.1"
  },
  "engines": {
    "node": ">= 16.14.2",
    "yarn": ">= 3.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "verbose": true,
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    }
  }
}
